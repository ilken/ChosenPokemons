{
    "rules": {
        "indent": [2, "tab", {"SwitchCase": 1}],
        "brace-style" : [2, "stroustrup"],
        "quotes": [2, "single"],
        "linebreak-style": [0, "windows"],
        "semi": [2, "always"],
        "no-console": 1,
        "no-debugger": 1,
        "max-len": 0,

        // Best Practices Rules
        "no-else-return": 1,
        "no-useless-return": 2,


        // ES6 Rules
        "constructor-super": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-duplicate-imports": [
            "error", {"includeExports": true}
        ],
        "no-useless-constructor": 2,
        "prefer-promise-reject-errors": 2,

        //React Rules
        "react/prop-types": [0],
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "react",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "firebase": true,
        "google": true,
        "NODE_ENV": true
    }
}
